#!/bin/true

set -e

. lib/env.sh
. lib/functions.sh
. targets/${STRAP_SELECTED_TARGET}.tgt

cd ${STRAP_BUILD_DIR}

extract_source_pkg file

cd ${STRAP_BUILD_DIR}/file-*

cat "${STRAP_FILES_DIR}/config.guess" > config.guess

cat "${STRAP_FILES_DIR}/config.sub" > config.sub

msg "Configuring file..."

./configure --prefix="$STRAP_STAGE1_INSTALL_DIR" --disable-fsect-man5

msg "Building file..."

make -j${STRAP_PJOBS}

msg "Installing file..."

make -j${STRAP_PJOBS} install
