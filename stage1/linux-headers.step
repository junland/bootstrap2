#!/bin/true

cd ${STRAP_BUILD_DIR}

extract_source_pkg linux

cd ${STRAP_BUILD_DIR}/linux-*

make mrproper

make -j${STRAP_PJOBS} ARCH=${STRAP_TARGET_KARCH} headers_check

make -j${STRAP_PJOBS} ARCH=${STRAP_TARGET_KARCH} INSTALL_HDR_PATH=dest headers_install

find dest/include -name '.*' -delete

rm usr/include/Makefile

mkdir -p ${STRAP_STAGE1_INSTALL_DIR}/usr/include

cp -rv dest/include/* ${STRAP_STAGE1_INSTALL_DIR}/sysroot/usr/include