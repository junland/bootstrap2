#!/bin/true

set -e

. lib/env.sh
. lib/functions.sh
. targets/${STRAP_SELECTED_TARGET}.tgt

cd ${STRAP_BUILD_DIR}

extract_source_pkg make

cd ${STRAP_BUILD_DIR}/make-*

msg "Configuring make..."

./configure \
 --prefix=/usr \
 --build=$STRAP_HOST \
 --host=$STRAP_TARGET \
 --target=$STRAP_TARGET \
 --disable-nls \
 --without-guile

msg "Building make..."

make -j${PNUM}

msg "Installing make..."

make -j${PNUM} DESTDIR=${STRAP_STAGE2_INSTALL_DIR} install