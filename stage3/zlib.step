#!/bin/true

set -e

. lib/env.sh
. lib/functions.sh
. targets/${STRAP_SELECTED_TARGET}.tgt

cd ${STRAP_BUILD_DIR}

extract_source_pkg zlib

cd ${STRAP_BUILD_DIR}/zlib

copy_local_build_stage3

export CHROOT_CD=/build/zlib

msg "Configuring zlib..."

run_cmd_chroot_stage3 "./configure --prefix=/usr --libdir=/usr/lib --enable-shared"

msg "Building zlib..."

run_cmd_chroot_stage3 "make -j${STRAP_PJOBS} "

msg "Install zlib..."

run_cmd_chroot_stage3 "make -j${STRAP_PJOBS} install"
